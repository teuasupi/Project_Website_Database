{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@teuas/frontend/*": ["./frontend/src/*"],
      "@teuas/backend/*": ["./backend/src/*"],
      "@teuas/shared/*": ["./shared/src/*"],
      "@/*": ["./frontend/src/*"]
    }
  },
  "include": ["frontend/**/*", "backend/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", ".next"]
}